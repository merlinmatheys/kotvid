<div id='sign-up-form'>
<h2>Se connecter</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <div class="label">
    <%= f.label :email %>
    </div>
    <div class="field">
    <%= f.text_field :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, class: 'connection-input' %>
    </div>
    <div class="label">
    <%= f.label :nom %>
    </div>
    <div class="field">
    <%= f.text_field :name, required: false, autofocus: true, input_html: { autocomplete: "nom" }, class: 'connection-input' %>
    </div>
    <div class="label">
    <%= f.label :mot_de_passe %>
    </div>
    <div class="field">
    <%= f.password_field :password, required: false, input_html: { autocomplete: "current-password" }, class: 'connection-input' %>
    </div>
    <%# f.input :name, as: :radio_buttons %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Connexion", class: "ajouter" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
