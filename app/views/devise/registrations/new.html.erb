<div id='sign-up-form'>
<h2>S'inscrire</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="label">
    <%= f.label :email %>
    </div>
    <div class="field">
    <%= f.text_field :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, class: 'connection-input' %>
    </div>
    <div class="label">
    <%= f.label :name %>
    </div>
    <div class="field">
    <%= f.text_field :name, required: true, autofocus: true, input_html: { autocomplete: "nom" }, class: 'connection-input' %>
    </div>
    <div class="label">
    <%= f.label :password %>
    </div>
    <div class="field">
    <%= f.password_field :password, required: true, input_html: { autocomplete: "new-password" }, class: 'connection-input' %>
    </div>
    <div class="label">
    <%= f.label :password %>
    </div>
    <div class="field">
    <%= f.password_field :password, required: true, input_html: { autocomplete: "new-password" }, class: 'connection-input' %>
    </div>




  </div>

  <div class="form-actions">
    <%= f.button :submit, "Inscription" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>



