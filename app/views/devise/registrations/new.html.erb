<div id='sign-up-form'>
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }, class: 'login-input' %>
    <%= f.input :name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "nom" }, class: 'login-input' %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} char min" if @minimum_password_length),
                input_html: { autocomplete: "new-password" }, class: 'login-input' %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" }, class: 'login-input' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "S'inscrire" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
