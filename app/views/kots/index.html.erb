<%= form_tag kots_path, method: :get do %>
  <%= label :location, "Search classifieds near : " %>
  <%= text_field_tag :location, params[:location] %>

  <%= label :distance, "Distance : " %>
  <%= text_field_tag :distance, params[:distance] %>

  <%= submit_tag "Search" %>
<% end %>

<ul>
  <% @kots.each do |kot| %>
    <li><%= kot.addresse %></li>
    <li><%= link_to "Détails", kot_path(kot) %></li>
  <% end %>
</ul>

<h2>Tu veux rendre serice à la communauté ? <%= link_to "Ajoutes ton kot", new_kot_path %></h2>


