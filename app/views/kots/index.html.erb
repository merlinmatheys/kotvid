    <% @kots.each do |kot| %>
      <div class="kot-index-card blue-card">
        <%= link_to content_tag(:span), kot_path(kot) %>
        <div class="kot-index-card-left">
          <div class="kot-index-card-left-top">
            <p><%= kot.addresse %></p>
            <p><%= kot.agence %></p>
          </div>
          <div class="kot-index-card-left-bottom">
            <% if kot.quartier != nil %>
              <p>Quartier: <%= kot.quartier %></p>
