<!DOCTYPE html>
<html>
  <head>
    <title>Kotvid</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="icon" href="logo.png" type="image/png">

    <link href='https://api.mapbox.com/mapbox-gl-js/v1.8.1/mapbox-gl.css' rel='stylesheet' />

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>

  <body>

    <% if user_signed_in? %>
      <div class="topnav">
        <%= link_to "Accueil", root_path, class: "left" %>
        <%= link_to "Ajoute ton kot", new_kot_path, class: "left" %>
        <%= link_to "Tous mes kots", mes_kots_kots_path, class: "left" %>
        <%= link_to "Déconnexion", destroy_user_session_path, class: "right", data: {:confirm => 'Souhaitez vous vous déconnecter ?'}, :method => :delete %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
